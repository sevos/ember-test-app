<h1>Users</h1>
<table class='table table-striped'>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  {{#each user in users}}
  <tr>
    <td>{{user.id}}</td>
    <td>{{#linkTo 'users.show' user}}{{user.fullName}}{{/linkTo}}</td>
    <td>
      {{#linkTo 'users.edit' user class='btn btn-primary'}}Edit{{/linkTo}}
      {{view App.Views.ButtonWithConfirm message="Do you want to delete this user" callback='delete' param=user}}
    </td>
  </tr>
  {{/each}}
</table>

<div class='page-header'></div>
{{#linkTo 'users.new' class='btn btn-primary'}}Create{{/linkTo}}
